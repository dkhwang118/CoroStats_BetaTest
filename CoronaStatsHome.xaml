<Page x:Class="CoroStats_BetaTest.CoronaStatsHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:CoroStats_BetaTest="clr-namespace:CoroStats_BetaTest"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="500"
    Title="ExpenseIt - Home">

    <!-- Static DateTime Data Setup Credit goes to: https://stackoverflow.com/a/2431741-->

    <Grid>
        <Grid.Resources>
            <CoroStats_BetaTest:StaticDataSurrogate x:Key="Static" />
            <CoroStats_BetaTest:FormatConverter x:Key="Formatter" />

        </Grid.Resources>


        <Canvas Background="White" >
            <!-- Button: Add Data -->
            <Button Content="Add Data" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="95" Click="Button_Click"/>

            <!-- Label: Today's Date -->
            <Label Content="Today's Date:" Margin="133,38,0,0" Canvas.Top="-31" Canvas.Left="-24"/>
            <!-- TextBlock: Static Data; Today's Date-->
            <TextBlock Canvas.Left="189" Canvas.Top="12" Text="{Binding DateToday, Source={StaticResource Static}, Converter={StaticResource Formatter}, ConverterParameter='dd MMM yyy'}" TextWrapping="Wrap" Width="110"/>

        </Canvas>


    </Grid>

</Page>